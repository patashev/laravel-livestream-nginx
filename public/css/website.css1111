/* Generic */
* {
    box-sizing: border-box;
}

/* Base */
html, body {
    height: 100%
}

/* Objects */
.advertising {
    background-color: #fff;
    margin: 40px 0;
    width: 100%;
    max-width: 850px;
    height: 250px;
    padding: 15px;
}
.card {
    width: 25%;
    padding: 5px 2px;
    margin-bottom: 24px;
}

@media(max-width: 780px) {
    .card {
        width: 33.33%
    }
}

@media(max-width: 590px) {
    .card {
        width: 50%
    }
}

@media(max-width: 450px) {
    .card {
        width: 100%
    }
}

.card__video {
    width: 100%;
}

.card__title {
    margin: 0;
    font-size: 14px;
    color: #1d1d1d;
    padding: 10px 8px 0 0;
}

.card__name {
    width: 100%;
    font-size: 13px;
    font-weight: 400;
    color: #111111;
    padding: 10px 8px 0 0;
}

.card__views {
    display: inline-block;
    width: 100%;
    font-size: 13px;
    font-weight: 500;
    color: #8f8f8f;
}

.card__published-date {
    width: 100%;
    display: inline-block;
    font-size: 13px;
    font-weight: 500;
    color: #8f8f8f;
}
.list {
    list-style: none;
    padding-left: 0;
    margin: 0;
    padding: 12px 0;
}

.list__item {
    padding-left: 24px;
    height: 40px;
    display: flex;
    align-items: center;
}

.list__item__icon {
    width: 24px;
    height: 24px;
    margin-right: 27px; 
}

.list__item__img {
    width: 24px;
    height: 24px;
    margin-right: 27px;
    border-radius: 50%;
}

.list__item__text {
    width: 117px;
    margin-right: 24px;
    font-family: 'Roboto', sans-serif;
    font-size: 14px;
    color: #212121;
    font-weight: 400;
}
.logo {
    width: 56px;
    margin-right: 24px;
}

@media(min-width: 660px) {
    .logo {
        margin-right: 73px;
    }
}
.menu-icon {
    padding: 8px;
    margin-right: 16px;
}
.search {
    flex: 1;
    display: flex;
    align-items: center;
}

@media(min-width: 660px) {
    .search {
        margin: 0 40px;
    }
}

@media(max-width: 470px) {
    .search {
        display: none;
    }
}

.search__input {
    box-sizing: content-box;
    width: 100%;
    max-width: 482px;
    height: 24px;
    padding: 2px 6px;
}

.search__button {
    box-sizing: content-box;
    width: 51px;
    height: 26px;
    vertical-align: middle;
    padding: 1px 6px;
}

.search__button__icon {
    width: 20px;
    height: 20px;
}
.section-list {
    border-bottom: 1px solid #eeeeee;
}

.section-list__title {
    text-transform: uppercase;
    font-size: 14px;
    color: #a0a0a0;
    padding: 8px 24px;
    margin: 0;
}
.user-info {
    width: 156px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

@media(max-width: 470px) {
    .user-info {
        margin-left: auto;
    }
}

.user-info__icon-profile {
    border-radius: 50%;
}
.video-list {
    padding: 10px 0;
    border-bottom: 1px solid #eeeeee;
    display: flex;
    flex-wrap: wrap;
}

.video-list__title {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    color: #212121;
    font-weight: 500;
    margin: 0 2px;
    width: 100%;
    padding: 10px 0;
}


/* Components */
.container {
    display: grid;
    height: 100%;
    grid-template-columns: 240px 1fr;
    grid-template-rows: 56px 1fr;
    grid-template-areas:
        'header header'
        'aside main';
}

@media(max-width: 1108px) {
    .container {
        grid-template-columns: 1fr;
        grid-template-areas:
        'header'
        'main';
    }
}
.header {
    width: 100%;
    background-color: #fff;
    height: 56px;
    position: fixed;
    grid-area: header;
    display: flex;
    padding: 0 16px;
    align-items: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, .1);
    z-index: 2;
}
.aside {
    grid-area: aside;
    border-bottom: 1px solid #eeeeee;
    background-color: #f5f5f5;
}

@media(max-width: 1108px) {
    .aside {
        display: none;
    }
}

.aside:hover {
    overflow-y: auto;
}
.main {
    background-color: #fafafa;
    grid-area: main;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    justify-content: center;
}
.video-section {
    background-color: #fff;
    width: 100%;
    max-width: 850px;
    padding: 15px;
}